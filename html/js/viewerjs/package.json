{
  "name": "viewerjs",
  "description": "JavaScript image viewer.",
  "version": "1.11.7",
  "main": "dist/viewer.common.js",
  "module": "dist/viewer.esm.js",
  "browser": "dist/viewer.js",
  "style": "dist/viewer.css",
  "types": "types/index.d.ts",
  "files": [
    "src",
    "dist",
    "types"
  ],
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/index.css -o dist/viewer.css --no-map",
    "build:js": "rollup -c",
    "clean": "del-cli dist",
    "compress": "npm run compress:css && npm run compress:js",
    "compress:css": "postcss dist/viewer.css -u cssnano -o dist/viewer.min.css --no-map",
    "compress:js": "uglifyjs dist/viewer.js -o dist/viewer.min.js -c -m --comments /^!/",
    "copy": "cpy dist/viewer.css docs/css --flat",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint **/*.{css,scss} --fix",
    "lint:js": "eslint . --fix",
    "prepare": "husky install",
    "release": "npm run clean && npm run lint && npm run build && npm run compress && npm run copy && npm test",
    "start": "npm-run-all --parallel watch:*",
    "test": "karma start",
    "watch:css": "postcss src/index.css -o docs/css/viewer.css -m -w",
    "watch:js": "rollup -c -m -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fengyuanchen/viewerjs.git"
  },
  "keywords": [
    "image",
    "viewer",
    "viewerjs",
    "viewer.js",
    "html",
    "css",
    "javascript",
    "front-end",
    "web"
  ],
  "author": {
    "name": "Chen Fengyuan",
    "url": "https://chenfengyuan.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fengyuanchen/viewerjs/issues"
  },
  "homepage": "https://fengyuanchen.github.io/viewerjs",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@rollup/plugin-babel": "^5.3.1",
    "babel-plugin-istanbul": "^6.1.1",
    "chai": "^4.5.0",
    "change-case": "^4.1.2",
    "codecov": "^3.8.3",
    "cpy-cli": "^5.0.0",
    "create-banner": "^2.0.0",
    "cssnano": "^5.1.15",
    "del-cli": "^5.1.0",
    "eslint": "^8.49.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^8.0.3",
    "karma": "^6.4.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-rollup-preprocessor": "^7.0.8",
    "lint-staged": "^13.3.0",
    "mocha": "^9.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-cli": "^10.1.0",
    "postcss-header": "^3.0.3",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^7.8.3",
    "postcss-url": "^10.1.3",
    "puppeteer": "^19.11.1",
    "rollup": "^2.79.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "uglify-js": "^3.19.3"
  }
}
